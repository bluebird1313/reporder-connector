  "description": "Unified service for connecting to multiple retailer platforms to monitor inventory levels and trigger reorder signals",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
