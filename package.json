    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "ts-node-dev": "^2.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "@shopify/shopify-api": "^10.0.0",
    "@supabase/supabase-js": "^2.50.2",
    "axios": "^1.6.0",
    "bullmq": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.18.0",
    "ioredis": "^5.3.0",
